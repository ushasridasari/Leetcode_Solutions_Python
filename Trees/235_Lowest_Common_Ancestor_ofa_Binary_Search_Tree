# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def lowestCommonAncestor(self, root: 'TreeNode', p: 'TreeNode', q: 'TreeNode') -> 'TreeNode':
        curr = root
        while curr: # keep searching until the root exists
            #checking whether p and q are greater than curr value then traverse to right
            if p.val > curr.val and q.val > curr.val: 
                curr = curr.right
            #checking whether p and q are lesser than curr value then traverse to left
            elif p.val < curr.val and q.val < curr.val:
                curr = curr.left
            #if p and q are different sides then return root value
            else:
                return curr
        

