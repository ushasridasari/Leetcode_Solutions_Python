# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeTwoLists(self, list1: Optional[ListNode], list2: Optional[ListNode]) -> Optional[ListNode]:
        dummy = node = ListNode()   # node = pointer, dummy = duplicate node

        while list1 and list2: # as long as both lists have values
            if list1.val < list2.val: # comparing the current values of list 1 and 2
                node.next = list1  # attaching the smaller value 1st
                list1 = list1.next # moving to next 
            else:
                node.next = list2  # attaching the smaller value 1st
                list2 = list2.next  # moving to next 
            node = node.next

        node.next = list1 or list2

        return dummy.next